[tower]
{% for item in tower_hosts %}
  {{ item }}
{% endfor %}

[database]
{{ tower_database }}

[all:vars]
admin_password='{{ tower_manage_admin_password }}'

# Define Remote PostgreSQL for Tower
pg_host='{{ tower_database.split()[0] }}'
pg_port='{{ tower_database_port }}'

pg_database='awx'
pg_username='awx'
pg_password='{{ tower_manage_pg_password }}'

rabbitmq_username=tower
rabbitmq_password='{{ tower_manage_rabbitmq_password }}'
rabbitmq_cookie=cookiemonster

# Isolated Tower nodes automatically generate an RSA key for authentication;
# To disable this behavior, set this value to false
# isolated_key_generation=true
